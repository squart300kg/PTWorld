<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Activity.SNSContents"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/sns_profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile_image"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/sns_nickname"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이것은 아이디"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이것은 위치"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:background="#4682B4" />
    <LinearLayout
        android:id="@+id/viewPage_Linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPage"
            android:layout_width="match_parent"
            android:layout_height="500dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/sns_like2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/heart"/>
        <com.airbnb.lottie.LottieAnimationView
            android:visibility="gone"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            android:id="@+id/sns_like"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/heart"
            app:lottie_fileName="like.json"/>
        <ImageView
            android:id="@+id/sns_reply"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/talk2"/>
        <ImageView
            android:visibility="gone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/border_main"/>
    </LinearLayout>
    <TextView
        android:id="@+id/sns_좋아요"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좋아하는 사람 test님 외 21명"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sns_nickname2"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이것은 아이디"/>
        <TextView
            android:id="@+id/sns_contentsTest"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="==============게시글 내용=========="/>
    </LinearLayout>
    <TextView
        android:id="@+id/sns_reply_count"
        android:text="댓글3개 모두보기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/reply_profile_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/profile_image"/>
        <TextView
            android:id="@+id/sns_reply_text"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="댓글 달기..."
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3시간 전"/>
</LinearLayout>