<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SNSProfile">
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/snsprofile_profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logo"/>
            <TextView
                android:id="@+id/snsprofile_nickname"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="게시물"
                android:textColor = "#000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/boardCount"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/followerCount2"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="팔로워"
                android:textColor = "#000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/followerCount"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/followingCount2"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="팔로잉"
                android:textColor = "#000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/followingCount"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/sns_profile_update"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textAlignment="center"
        android:text="프로필 수정"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/border_profile_update"/>
    <TextView
        android:id="@+id/sns_profile_follow"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textAlignment="center"
        android:text="팔로우 하기"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/border_profile_update"/>
    <TextView
        android:id="@+id/sns_profile_eachfollow"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textAlignment="center"
        android:text="맞팔로우 하기"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/border_profile_update"/>
    <TextView
        android:id="@+id/sns_profile_following"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textAlignment="center"
        android:text="팔로우 중"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/border_profile_update"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#4682B4" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profileRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>